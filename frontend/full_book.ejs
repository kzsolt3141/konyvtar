<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Berecki konyvtar</title>
    <link rel="stylesheet" href="/styles/common.css" />
    <link rel="stylesheet" href="/styles/index-header.css" />
    <meta id="bid" name="bid" content="<%= bid %>" />
  </head>
  <body>
    <div class="fixed_header">
      <div class="fixed_header_left">
        <img class="fixed_header_image" src="/styles/static/CIMER.png" />
      </div>
      <div class="fixed_header_center">
        <h1 class="fixed_header_title">Berecki konyvtar</h1>
      </div>
      <div class="fixed_header_right">
        <button class="search_button" id="add_book_btn">
          <img class="search_button_icon" src="/styles/static/book-plus.svg" />
          <div class="tooltip">Uj Konyv</div>
        </button>
        <button class="search_button" id="add_user_btn">
          <img class="search_button_icon" src="/styles/static/user-plus.svg" />
          <div class="tooltip">Uj Felhasznalo</div>
        </button>
        <button class="search_button" id="backup_btn">
          <img class="search_button_icon" src="/styles/static/backup.svg" />
          <div class="tooltip">Backup!</div>
        </button>
      </div>
    </div>
    <div id="full_book_main" class="full_book_main">
      <div id="full_book_details" class="full_book_details">
        <div id="full_book_picture" class="full_book_picture"></div>
        <div id="full_book_text" class="full_book_text"></div>
      </div>
      <div id="full_book_xt" class="full_book_xt">
        <div id="full_book_notes" class="full_book_notes"></div>
        <div id="full_book_lend" class="full_book_lend"></div>
      </div>
    </div>
    <h1>Document for book ID: <%= bid%></h1>
    <div class="version" id="version"></div>
  </body>
  <script type="module" src="/scripts/common.js"></script>
  <script type="module" src="/scripts/full_book.js"></script>
</html>
